{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "noImplicitAny": false,
    "types": ["node"]
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
